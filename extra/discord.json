{
  "name": "discord",
  "description": "Discord is a proprietary freeware VoIP application and digital distribution platform designed for video gaming communities.",
  "version": "latest",
  "maintainer": "Discord Inc.",
  "installation": [
    "curl -L -o discord-0.0.57.tar.gz https://dl.discordapp.net/apps/linux/0.0.57/discord-0.0.57.tar.gz",
    "sudo tar -xzvf discord-0.0.57.tar.gz -C /opt",
    "sudo ln -sf /opt/Discord/Discord /hl-bin/discord",
    "rm discord-0.0.57.tar.gz"
  ],
  "uninstallation": [
    "sudo rm -rf /opt/Discord",
    "sudo rm /hl-bin/discord",
    "rm -rf ~/.config/discord"
  ]
}
